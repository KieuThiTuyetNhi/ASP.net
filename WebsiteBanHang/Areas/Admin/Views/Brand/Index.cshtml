@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<WebsiteBanHang.Context.Brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
@using (Html.BeginForm("Index", "Brand", FormMethod.Get))
{
    <p>
        Tìm sản phẩm:&nbsp @Html.TextBox("SearchString", ViewBag.CurrentFilter as string, new { @placeholder = "Nhập tên sản phẩm" })
        <input type="submit" class="btn btn-sm btn-outline-primary " value="Tìm kiếm" />
    </p>
}
<table class="table">
    <tr>
        <th>
           @* Ngày cập nhật*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().UpdateOnUtc)
        </th>
        <th>
           @* Tên sản phẩm*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        <th>
           @* Hình ảnh*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().Avatar)
        </th>
        
        <th>
          @*  Hiển thị ở trang chủ*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().ShowOnHomePage)
        </th>
       
        <th>
           @* Ngày tạo*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedOnUtc)
        </th>
        <th>
          @*  Trạng thái*@
            @Html.DisplayNameFor(model => model.FirstOrDefault().Deleted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.UpdatedOnUtc
             
            </td>
            <td>
                @item.Name
                @* @Html.DisplayFor(modelItem => item.Name)*@
            </td>
            <td>
                <img src="~/Content/images/items/@item.Avatar"".png" style="width:100px;height:100px" />

                
                @* @Html.DisplayFor(modelItem => item.Avatar)*@
            </td>
           
            <td>
                
                @item.ShowOnHomePage
                @*@Html.DisplayFor(modelItem => item.ShowOnHomePage)*@
            </td>
            
           
            <td>
                @item.Deleted
                @*@Html.DisplayFor(modelItem => item.Deleted)*@
            </td>
            <td>
                @Html.ActionLink("Edit", "Edits", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<div class="text-center">
    Trang @(Model.PageCount <Model.PageNumber ?0 :Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))
</div>
